#include "imx8mm-pico-pi.dts"

/ {
	backlight_mipi {
		status = "okay";
	};
};

&mipi_dsi {
	status = "okay";

	panel@0 {
		compatible = "jdi,tpm0501010p";
		reg = <0>;
		pinctrl-0 = <&pinctrl_mipi_dsi_rst &pinctrl_touch_rst>;
		reset-gpio = <&gpio3 9 GPIO_ACTIVE_LOW>;
		tpreset-gpio = <&gpio4 28 GPIO_ACTIVE_LOW>;
		dsi-lanes = <4>;
		panel-width-mm = <62>;
		panel-height-mm = <110>;
		timing-mode = <0>;
		video-mode = <2>;

		display-timings {
			timing {
				clock-frequency = <148500000>;
				hactive = <1080>;
				vactive = <1920>;
				hfront-porch = <70>;
				hsync-len = <24>;
				hback-porch = <100>;
				vfront-porch = <4>;
				vsync-len = <4>;
				vback-porch = <2>;

				hsync-active = <0>;
				vsync-active = <0>;
				de-active = <0>;
				pixelclk-active = <0>;
			};
		};
	};
};

